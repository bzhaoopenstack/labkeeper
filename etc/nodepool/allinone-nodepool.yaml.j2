    launch-timeout: 1200
    boot-timeout: 1200
    image-name-format: 'allinone-openlab-{image_name}-{timestamp}'
    diskimages:
      - name: ubuntu-xenial
        config-drive: true
      - name: ubuntu-trusty
        config-drive: true
